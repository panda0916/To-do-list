<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="css/mycss.css">
    <title>代辦事項</title>
</head>

<body>
    <h1>代辦事項</h1>
    <form action="/" method="post" class="sticky-top" id="for1">
        <label for="newmatter"></label>
        <input type="text" placeholder="想做甚麼呢?" name="matter" maxlength="14">
        <input type="hidden" name="action" value="add">
        <button class="rounded-circle">新增</button>
    </form>
    <% for(let c of events) { %>
        <% if(!c.schedule) { %>
            <div>
                <span  class="sp1">
                    <b style="display: inline; ">
                        <%= c.matter %>
                    </b>
                    <span>
                    <form method="POST" action="/?_method=PATCH" style="display: inline; ">
                        <input type="hidden" name="_method" value="PATCH">
                        <input type="hidden" name="matter" value="<%= c.id %>" style="display: none;">
                        <input type="text" maxlength="14" name="newCommentText" value="<%= c.matter %>">
                        <button class="rounded-pill btn btn-success" type="submit">修改</button>
                    </form>
                    <form method="POST" action="/?_method=DELETE" style="display: inline;">
                        <input type="hidden" name="id" value="<%= c.id %>" style="display: none;">
                        <input type="hidden" name="_method" value="DELETE">
                        <button class=" btn btn-danger rounded-pill  align-middle" type="submit">刪除</button>
                    </form>
                    <form method="POST" action="/" style="display: inline;">
                        <input type="hidden" name="id" value="<%= c.id %>" style="display: none;">
                        <input type="hidden" name="action" value="done">
                        <button class="btn btn-secondary rounded-pill">完成</button>
                    </form>
                    </span>
                </span>

                <% } %>
                    <% } %>
            </div>


            <div class="text-white-50 bg-dark fixed-bottom">

                <% for(let c of events) { %>
                    <% if(c.schedule) { %>
                        <div class="sp2">
                            <b>
                                <%= c.matter %>
                            </b>
                            <span>
                                <form method="POST" action="/?_method=DELETE" style="display: inline;">
                                    <input type="hidden" name="id" value="<%= c.id %>" style="display: none;">
                                    <input type="hidden" name="_method" value="DELETE">
                                    <button class=" btn btn-danger rounded-pill  align-middle" type="submit">刪除</button>
                                </form>
                            </span>
                        </div>
                        <% } %>
                            <% } %>
            </div>
</body>

</html>